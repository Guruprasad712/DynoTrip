# Base image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# Copy the entire backend (agents, utils, scripts, toolbox)
COPY . .

# Expose FastAPI port
EXPOSE 8080

# Run FastAPI agent
CMD ["uvicorn", "agents.itinerary_agent.api_server:app", "--host", "0.0.0.0", "--port", "8080"]
